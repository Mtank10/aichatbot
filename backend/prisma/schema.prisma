generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Chats {
  id  String @id @default(cuid())
  title String
  createdAt DateTime @default(now())

  Messages Messages[]
}
model Messages {
  id String @id @default(cuid())
  chat_id String
  role String
  content String
  timestamp DateTime @default(now())
  chat Chats @relation(fields: [chat_id], references: [id], onDelete: Cascade)
}